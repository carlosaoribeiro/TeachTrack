<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B132B"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 🧢 Nome do App -->
        <TextView
            android:id="@+id/txtAppNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeachTrack"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <!-- 🧾 Subtítulo -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cadastre_seu_aluno"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp" />

        <!-- 🧑 Nome -->
        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/nome"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 👨‍🦱 Sobrenome -->
        <EditText
            android:id="@+id/editSobrenome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/sobrenome"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 📱 Telefone -->
        <EditText
            android:id="@+id/editTelefone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/telefone_00_00000_0000"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 📧 Email -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 🎂 Nascimento -->
        <EditText
            android:id="@+id/editDataNascimento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/data_de_nascimento_dd_mm_aaaa"
            android:inputType="date"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 📅 Cadastro -->
        <EditText
            android:id="@+id/editDataCadastro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/data_de_cadastro_dd_mm_aaaa"
            android:inputType="date"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 🎓 Tipo de Aluno -->

        <Spinner
            android:id="@+id/spinnerTipoAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textColor="#FFFFFF" />


        <!-- 📌 Checkboxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

        </LinearLayout>

        <!-- ✅ Botão -->
        <Button
            style="@style/Button.TeachTrack"
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/salvar"
            android:textColor="#E5E7ED"
            android:textStyle="bold"
            android:background="@drawable/bg_button_white" />
    </LinearLayout>
</ScrollView>
