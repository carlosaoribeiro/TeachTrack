<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B132B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="80dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">

                <!-- 🧢 Título -->

                <!-- 📆 Botão: Agendar Aula -->
                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="48dp"
                    android:text="TeachTrack"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAgendarAula"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Agendar Aula"
                    android:background="@drawable/bg_button_white"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- 🧑‍🎓 Botão: Listar Alunos -->
                <Button
                    android:id="@+id/btnListarAlunos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Listar Alunos"
                    android:background="@drawable/bg_button_white"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- 📋 Botão: Ver Aulas Agendadas -->
                <Button
                    android:id="@+id/btnVerAulas"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Ver Aulas Agendadas"
                    android:background="@drawable/bg_button_white"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

        </LinearLayout>
</ScrollView>
