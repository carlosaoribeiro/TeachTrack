<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B132B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 🧢 Título -->
        <TextView
            android:id="@+id/txtTituloLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="TeachTrack"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp" />

        <!-- ✉️ Email -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp" />

        <!-- 🔒 Senha -->
        <EditText
            android:id="@+id/editSenha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp" />

        <!-- 🔓 Esqueci a senha -->
        <TextView
            android:id="@+id/txtEsqueciSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueci a senha"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- 🔐 Botão de Login -->
        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Entrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_button_white"
            android:layout_marginBottom="24dp" />

        <!-- 🆕 Cadastrar-se -->
        <TextView
            android:id="@+id/txtCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda não tem conta? Cadastre-se"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
