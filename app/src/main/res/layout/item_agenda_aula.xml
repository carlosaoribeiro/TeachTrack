<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#1C2541">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do Aluno -->
        <TextView
            android:id="@+id/txtNomeAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carlos Augusto Ribeiro"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Hora da Aula -->
        <TextView
            android:id="@+id/txtHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/05/2025 - 08:00"
            android:textColor="#A29BFE"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Tipo de Aula -->
        <TextView
            android:id="@+id/txtTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensal"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Ações: Editar | Excluir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✏️ Editar"
                android:textColor="#4AA8FC"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/btnExcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🗑️ Excluir"
                android:textColor="#FF6B6B"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
