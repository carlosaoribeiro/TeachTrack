<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B132B"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ§¢ TÃ­tulo -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendar Aula"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ§‘ Nome do Aluno -->
        <AutoCompleteTextView
            android:id="@+id/autoAluno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nome do Aluno"
            android:background="@drawable/bg_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ“§ Email -->
        <EditText
            android:id="@+id/editEmailAluno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:enabled="false"
            android:background="@drawable/bg_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ“Œ Tipo de Aluno -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Aluno"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioTipoAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DiÃ¡rio"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radioMensal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensal"
                android:textColor="#FFFFFF"
                android:layout_marginStart="32dp" />
        </RadioGroup>

        <!-- ðŸ“… Data Aula (Somente DiÃ¡rio) -->
        <LinearLayout
            android:id="@+id/layoutDataAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/labelDataAula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data da Aula"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editDataAula"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecionar data"
                android:focusable="false"
                android:inputType="none"
                android:background="@drawable/bg_input"
                android:textColor="#FFFFFF"
                android:textColorHint="#A9B4C2"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- ðŸ•’ Hora Aula (Somente DiÃ¡rio) -->
        <TextView
            android:id="@+id/labelHoraDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HorÃ¡rio da Aula"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editHoraDiaria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ex: 14:00"
            android:focusable="false"
            android:inputType="none"
            android:background="@drawable/bg_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4C2"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- ðŸ“… HorÃ¡rios Semanais (Mensal) -->
        <TextView
            android:id="@+id/txtLabelRecorrencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HorÃ¡rios fixos semanais"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <TableLayout
            android:id="@+id/tabelaRecorrencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:visibility="gone">

            <TableRow>
                <TextView android:text="Segunda" android:textColor="#FFFFFF"/>
                <EditText android:id="@+id/editHoraSeg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="HH:mm"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_input"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A9B4C2"
                    android:paddingHorizontal="16dp"/>
            </TableRow>

            <TableRow>
                <TextView android:text="TerÃ§a" android:textColor="#FFFFFF"/>
                <EditText android:id="@+id/editHoraTer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="HH:mm"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_input"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A9B4C2"
                    android:paddingHorizontal="16dp"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Quarta" android:textColor="#FFFFFF"/>
                <EditText android:id="@+id/editHoraQua"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="HH:mm"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_input"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A9B4C2"
                    android:paddingHorizontal="16dp"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Quinta" android:textColor="#FFFFFF"/>
                <EditText android:id="@+id/editHoraQui"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="HH:mm"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_input"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A9B4C2"
                    android:paddingHorizontal="16dp"/>
            </TableRow>

            <TableRow>
                <TextView android:text="Sexta" android:textColor="#FFFFFF"/>
                <EditText android:id="@+id/editHoraSex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="HH:mm"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_input"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A9B4C2"
                    android:paddingHorizontal="16dp"/>
            </TableRow>
        </TableLayout>

        <!-- ðŸ“¥ BotÃ£o -->
        <Button
            android:id="@+id/btnSalvarAula"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Salvar Aula"
            android:textStyle="bold"
            android:background="@drawable/bg_button_rounded_purple"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>
