<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B132B"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Agendar Aula"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autoAluno"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginBottom="12dp"
            android:background="#FFFFFF"
            android:hint="Digite ou selecione um aluno"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editEmailAluno"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:enabled="false"
            android:hint="Email do aluno"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <LinearLayout
            android:id="@+id/layoutDataAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/labelDataAula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data da Aula"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/editDataAula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Clique para selecionar a data"
                android:focusable="false"
                android:inputType="none"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Aluno"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioTipoAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diário"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radioMensal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensal"
                android:textColor="#FFFFFF"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/labelHoraDiaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário da Aula"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editHoraDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 10:00"
            android:inputType="none"
            android:focusable="false"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:background="#FFFFFF"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtLabelRecorrencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horários fixos semanais"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <TableLayout
            android:id="@+id/tabelaRecorrencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:visibility="gone">

            <TableRow>
                <TextView android:text="Segunda" android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/editHoraSeg"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Terça" android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/editHoraTer"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Quarta" android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/editHoraQua"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Quinta" android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/editHoraQui"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Sexta" android:textColor="#FFFFFF"/>
                <EditText
                    android:id="@+id/editHoraSex"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnSalvarAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Aula"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_rounded_purple" />
    </LinearLayout>
</ScrollView>
