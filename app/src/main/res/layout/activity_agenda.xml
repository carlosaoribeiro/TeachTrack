<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🏣 Título da tela -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Agendar Aula"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- 🔍 AutoComplete para aluno -->
        <AutoCompleteTextView
            android:id="@+id/autoAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite ou selecione um aluno" />

        <!-- 📧 Email preenchido automaticamente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editEmailAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email do aluno"
            android:enabled="false" />

        <!-- 🗓 Campo para data da aula -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da Aula"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editDataAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clique para selecionar a data"
            android:focusable="false"
            android:inputType="none"
            android:background="@android:drawable/edit_text" />

        <!-- 👤 Tipo de aluno -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Aluno"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radioTipoAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diário" />

            <RadioButton
                android:id="@+id/radioMensal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensal" />
        </RadioGroup>

        <!-- ⏰ Label e horário do aluno diário -->
        <TextView
            android:id="@+id/labelHoraDiaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário da Aula"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editHoraDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 10:00"
            android:inputType="none"
            android:focusable="false"
            android:background="@android:drawable/edit_text"
            android:visibility="gone" />

        <!-- 🔁 Label de recorrência -->
        <TextView
            android:id="@+id/txtLabelRecorrencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horários fixos semanais"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <!-- 📅 Tabela de dias da semana com horário -->
        <TableLayout
            android:id="@+id/tabelaRecorrencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:visibility="gone">

            <TableRow>
                <TextView android:text="Segunda" />
                <EditText
                    android:id="@+id/editHoraSeg"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Terça" />
                <EditText
                    android:id="@+id/editHoraTer"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Quarta" />
                <EditText
                    android:id="@+id/editHoraQua"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Quinta" />
                <EditText
                    android:id="@+id/editHoraQui"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView android:text="Sexta" />
                <EditText
                    android:id="@+id/editHoraSex"
                    android:hint="HH:mm"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@android:drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <!-- ✅ Botão para salvar -->
        <Button
            android:id="@+id/btnSalvarAula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Aula"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>
